{
  "name": "flow-documentation",
  "displayName": "flow-documentation",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.py"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
			"explorer": [
				{
					"type": "webview",
					"id": "flow-documentation.flowsView",
					"name": "Flow Documentation"
				},
        {
          "type": "webview",
          "id": "flow-documentation.maintainersView",
          "name": "Maintainers"
        }
			]
		},
    "commands": [
      {
        "command": "flow-documentation.createGraphs",
        "title": "Create Graphs"
      },
      {
        "command": "flow-documentation.showMaintainer",
        "title": "Show Maintainer"
      }
    ],
    "configuration": {
      "title": "FlowDoc",
      "properties": {
        "wordCounter.extraFolders": {
          "type": "array",
          "//default": [".", "F://Facultate/Master2/Thesis/code/demo"],
          "default": [],
          "description": "List of extra folders to scan."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "flow-documentation.showMaintainer"
        }
      ],
      "explorer/context": [
        {
          "command": "flow-documentation.showMaintainer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}

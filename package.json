{
  "repository": {
    "type": "git",
    "url": "https://github.com/blox-dev/flow-documentation"
  },
  "publisher": "blox-dev",
  "name": "flow-documentation",
  "displayName": "flow-documentation",
  "description": "",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.py"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "flow-documentation.flowsView",
          "name": "Flow Documentation"
        },
        {
          "type": "webview",
          "id": "flow-documentation.maintainersView",
          "name": "Maintainers"
        }
      ]
    },
    "commands": [
      {
        "command": "flow-documentation.createGraphs",
        "title": "Create Graphs"
      },
      {
        "command": "flow-documentation.showMaintainer",
        "title": "Show Maintainer"
      },
      {
        "command": "flow-documentation.chooseMaintainerFile",
        "title": "Choose Maintainer File"
      },
      {
        "command": "flow-documentation.highlightCodeInGraph",
        "title": "Highlight in Flow Graph"
      }
    ],
    "configuration": {
      "title": "FlowDoc",
      "properties": {
        "flow-documentation.extraFolders": {
          "type": "array",
          "default": [],
          "description": "List of extra folders to scan."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "flow-documentation.showMaintainer"
        },
        {
          "command": "flow-documentation.highlightCodeInGraph",
          "when": "resourceLangId == python"
        }
      ],
      "explorer/context": [
        {
          "command": "flow-documentation.showMaintainer"
        }
      ],
      "commandPalette": [
        {
          "command": "flow-documentation.showMaintainer",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "simple-git": "^3.24.0"
  }
}